{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "word-unscrambler",
  "title": "Word Unscrambler",
  "description": "Unscramble letters for Scrabble using CSW or NWL dictionaries",
  "icon": "icon.png",
  "author": "brentDes",
  "categories": [
    "Fun",
    "Productivity"
  ],
  "license": "MIT",
  "owner": "brentDes",
  "access": "public",
  "commands": [
    {
      "name": "unscramble",
      "title": "Unscramble Words",
      "description": "Find valid Scrabble words from scrambled letters",
      "mode": "view",
      "arguments": [
        {
          "name": "letters",
          "placeholder": "Letters (use ? for blanks)",
          "type": "text",
          "required": true
        }
      ],
      "preferences": [
        {
          "name": "dictionary",
          "title": "Dictionary",
          "description": "Choose which Scrabble dictionary to use",
          "type": "dropdown",
          "required": true,
          "default": "NWL",
          "data": [
            {
              "title": "NWL (North American Word List)",
              "value": "NWL"
            },
            {
              "title": "CSW (Collins Scrabble Words)",
              "value": "CSW"
            }
          ]
        }
      ]
    }
  ],
  "preferences": [
    {
      "name": "dictionary",
      "title": "Dictionary",
      "description": "Choose which Scrabble dictionary to use",
      "type": "dropdown",
      "required": true,
      "default": "NWL",
      "data": [
        {
          "title": "NWL (North American Word List)",
          "value": "NWL"
        },
        {
          "title": "CSW (Collins Scrabble Words)",
          "value": "CSW"
        }
      ]
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.65.0",
    "@raycast/utils": "^1.12.0"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^1.0.8",
    "@types/node": "20.8.10",
    "@types/react": "18.2.27",
    "eslint": "^8.51.0",
    "prettier": "^3.0.3",
    "typescript": "^5.2.2"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  }
}
